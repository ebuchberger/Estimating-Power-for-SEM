### SLURM Options ###
# see tardis.mpib.berlin.mpg.de/docs
WALLTIME = 10:00:00
MEMORY = 20gb
QUEUE = default
CORES = 32
NAME = POWERSEM
QFLAGS = -q $(QUEUE) --cpus-per-task $(CORES) --time $(WALLTIME) --mem $(MEMORY) --job-name $(NAME)

ifeq ($(SLURM),TRUE)
	QRUN1 := sbatch $(QFLAGS) --wrap "
	QRUN2 := "
endif