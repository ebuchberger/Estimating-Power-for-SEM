### SLURM Options ###
# see tardis.mpib.berlin.mpg.de/docs
WALLTIME = 40:00:00
MEMORY = 60gb
QUEUE = long
CORES = 32
NAME = POWERSEM
QFLAGS = -p $(QUEUE) --cpus-per-task $(CORES) --time $(WALLTIME) --mem $(MEMORY) --job-name $(NAME)

ifeq ($(SLURM),TRUE)
	QRUN1 := sbatch $(QFLAGS) --wrap "
	QRUN2 := "
endif